<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.MenuActivity"
    android:background="@drawable/fondo">


    <ImageView
        android:id="@+id/image_top"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:contentDescription="@null"/>

    <FrameLayout
        android:id="@+id/fragment_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/image_top"
        app:layout_constraintBottom_toTopOf="@id/linear_menu"/>

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/background_button"
        android:backgroundTint="@color/heather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

       <ImageView
           android:id="@+id/item_home"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:src="@drawable/ic_home"
           android:layout_weight="1"/>

       <ImageView
           android:id="@+id/item_play"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:src="@drawable/ic_play"
           android:layout_weight="1"/>

       <ImageView
           android:id="@+id/item_user"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:src="@drawable/ic_user"
           android:layout_weight="1"/>

       <ImageView
           android:id="@+id/item_leave"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:src="@drawable/ic_leave"
           android:layout_weight="1"/>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>